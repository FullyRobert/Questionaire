  <div class="app-content content container-fluid">
    <div class="content-wrapper">
      <div class="content-header row">
        <div class="content-header-left col-md-10 col-xs-12 mb-1">
          <!-- 模态框（Modal） -->
          <div class="modal fade" id="newquestion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel">新增问题</h4>
                </div>
                <div class="modal-body">
                  <form class="form" id="form1">
                    <div class="form-group">
                      <label for="eventInput1">请输入新问题标题</label>
                      <input type="text" id="title" class="form-control" placeholder="请输入" name="title">
                    </div>

                    <div class="form-group">
                      <label for="eventInput2">请选择问题类型</label>
                      <select id="questiontype" class="combobox form-control selectpicker" name="questiontype">
                        <option></option>
                        <option value="1" selected>单选题</option>
                        <option value="2">多选题</option>
                        <option value="3">单行文本</option>
                        <option value="4">多行文本</option>
                        <option value="5">整数</option>
                        <option value="6">小数</option>
                        <option value="7">评分</option>
                      </select>
                    </div>

                    <div class="form-group" id=type1>
                      <label for="eventInput3">请输入各个选项内容：</label>
                      <input type="text" id="a" class="form-control" placeholder="A" name="a">
                      <input type="text" id="b" class="form-control" placeholder="B" name="b">
                      <input type="text" id="c" class="form-control" placeholder="C" name="c">
                      <input type="text" id="d" class="form-control" placeholder="D" name="d">
                    </div>

                    <div class="form-group" id=type2>
                      <label for="eventInput4">请输入填写数字的最小精度值(最小为万分之一）：</label>
                      <input type="number" step="0.0001" id="accuracy" class="form-control" placeholder="请输入"
                        name="accuracy">
                    </div>

                    <div class="form-group" id=type3>
                      <label for="eventInput5">请输入评分项数（不超过10）:</label>
                      <input type="number" id="" class="form-control" placeholder="请输入" name="num">
                    </div>

                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                  <button type="button" class="btn btn-info" id="createsubmit">确认创建</button>
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal -->
          </div>
        </div>
