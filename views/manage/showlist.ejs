      <div class="content-body"><!-- Overview -->
        <% if (length == 0) { %>
          <div class="card-block">
            <div class="row">
                <div class="alert alert-info alert-dismissible fade in mb-2" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <strong>提示：这里一条记录也没有哦！</strong>
                </div>
            </div>
          </div>
        <% } %>
        <% for (var i = 0; i < details.length; i++) { %>
          <div class="card">
            <div class="card-header">
                <h4 class="card-title"><%= details[i].title %></h4>
              <br/>
                <h6 class="card-subtitle mb-1 text-muted"><em><%= details[i].description %></em></h6>
              <div class="heading-elements">
                <ul class="list-inline mb-0">
                  <% if (details[i].status == 0) {%>
                    <li>未发布 &nbsp &nbsp &nbsp</li>
                  <% } else if (details[i].status == 1) { %>
                    <li>已发布 &nbsp &nbsp &nbsp</li>
                  <% } else if (details[i].status == 2) { %>
                    <li>已结束&nbsp &nbsp &nbsp</li>
                  <% } %>
                  <form action="/manage/delete" method="post" style="float: right;">
                    <span class="tag tag-pill tag-danger cursor delete">删除问卷</span>
                    <input type="hidden" name="pos" value="<%= i %>" />
                  </form>
                </ul>
              </div>
            </div>
            <div class="card-body collapse in" aria-expanded="true">
              <div class="card-block">
                <div class="table-responsive" >
                  <table class="table table-hover table-striped">
                    <tbody>
                      <th>问卷名称</th>
                      <th>当前状态</th>
                      <th class="hidden-xs">最大填写次数</th>
                      <th>结束时间</th>
                      
                      <% if (details[i].status == 1) { %>
                        <th>填写链接</th>
                        <th>当前填写次数</th>
                      <% } else if (details[i].status == 2) { %>
                        <th>当前填写次数</th>
                      <% } %>
                      <tr>
                        <td><%= details[i].title %></td>

                        <% if (details[i].status == 0) { %>
                          <td>待发布</td>
                        <% } %>
                        <% if (details[i].status == 1) { %>
                          <td>已发布</td>
                        <% } %>
                        <% if (details[i].status == 2) { %>
                          <td>已结束</td>
                        <% } %>

                        <td class="hidden-xs"><%= details[i].maxnum %></td>
                        <td><%= dateFormat(details[i].end_time) %></td>
                        <% if (details[i].status == 1) { %>
                          <td><a href="<%= details[i].url %>"><%= details[i].url %></a></td>
                          <td><%= details[i].cur_num %></td>                         
                        <% } else if (details[i].status == 2) { %>
                          <td><%= details[i].cur_num %></td>
                        <% } %>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
              <span class="tags float-xs-right">
                <% if (details[i].status == 0) { %>
                  <a href="/manage/editquestionaire?questionaireid=<%=details[i].id %>&pos=<%= i %>">
                    <span class="tag tag-pill tag-info">编辑问卷</span>
                  </a>
                  <form action="/manage/public" method="post">
                    <span class="tag tag-pill tag-success cursor public">发布问卷</span>
                    <input type="hidden" name="pos" value="<%= i %>" />
                  </form>

                <% } %>
                <% if (details[i].status == 1) { %>
                  <form action="/manage/stoppublic" method="post">
                    <span class="tag tag-pill tag-warning cursor stop">终止发布</span>
                    <input type="hidden" name="pos" value="<%= i %>" />
                  </form>
                <% } %>
                <% if (details[i].status == 2) { %>
                  <a href="/payment/orderinfo?oid=<%= compileStr('YCJ20190608' + details[i].order_id) %>&session=<%= compileStr('YCJ20190608' + i) %>">
                  <span class="tag tag-pill tag-success">查看统计结果</span></a>
                <% } %>
              </span>
            </div>
          </div>
        <% } %>
      </div>
    </div>
