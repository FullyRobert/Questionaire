          <button class="btn btn-success btn-md" data-toggle="modal" data-target="#newquestionaire">创建新问卷</button>
          <!-- 模态框（Modal） 新建问卷用-->
          <div class="modal fade" id="newquestionaire" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">创建新问卷</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-body">
                      <div class="form-group">
                        <label for="eventInput1">问卷名称</label>
                        <input type="text" id="title" class="form-control" placeholder="问卷名称" name="title">
                      </div>

                      <div class="form-group">
                        <label for="eventInput2">问卷说明</label>
                        <input type="text" id="description" class="form-control" placeholder="问卷描述" name="description">
                      </div>

                      <div class="form-group">
                        <label for="eventInput5">请选择问卷截止日期</label>
                        <input type="date" id="enddate" class="form-control" name="contact" placeholder="enddate">
                      </div>  
  
                      <div class="form-group">
                        <label for="eventInput2">请选择发布类型</label>
                        <select id="publictype" class="combobox form-control selectpicker" name="publictype">
                          <option></option>
                          <option value="1" selected>仅注册用户可填写</option>
                          <option value="2" >无需注册，填写一定次数</option>
                          <option value="3">无需注册，每天可填写一定次数</option>
                        </select>
                      </div>

                      <div class="form-group">
                        <label for="eventInput3">可填写次数</label>
                        <input type="number" id="maxnum" class="form-control" placeholder="可填写次数" name="maxnum">
                      </div>
                    </div>
                  </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                      <button type="button" class="btn btn-info" id ="createsubmit">提交更改</button>
                  </div>
